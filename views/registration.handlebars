<div class="container-fluid padding">
    <div class="row padding">
        <div class="col-lg-4 col-md-3"></div>

        <div class="col-lg-4 col-md-6">
            <form action="/registration" method="POST" id="form-ui">
                <fieldset>
                    <legend><b>Create Account</b></legend>

                    <div class="col-12 social-pic">
                        <img class="social" src="/img/fbLogo.jpg" alt="">
                        <img class="social" src="/img/instaLogo.jpg" alt="">
                        <img class="social" src="/img/tweetLogo.jpg" alt="">
                    </div>

                    <div class="col-12" id="or">
                        <hr>or<hr>
                    </div>

                    <div class="col-12">
                        <label for="fname">First Name</label>
                        {{#each errorMessages}}<div>{{this.first}}</div>{{/each}}
                        <div><input type="text" name="Fname" value={{field.firstName}}></div>
                    </div>

                    <div class="col-12">
                        <label for="lname">Last Name</label>
                        {{#each errorMessages}}<div>{{this.last}}</div>{{/each}}
                        <div><input type="text" name="Lname" value={{field.lastName}}></div>
                    </div>

                    <div class="col-12">
                        <label for="email">Email</label>
                        {{#each errorMessages}}<div>{{this.email}}</div>{{/each}}
                        <div><input type="email" name="Email" value={{field.email}}></div>
                    </div>

                    <div class="col-12">
                        <label for="password">Password</label>
                        {{#each errorMessages}}<div>{{this.password}}</div>{{/each}}
                        <div><input type="password" name="Password" value={{field.password}}></div>
                    </div>

                    <div class="col-12">
                        <b><input type="submit" value="Sign Up" id="signUp"></b>
                    </div>
                </fieldset>
            </form>
        </div>

        <div class="col-lg-4 col-md-3"></div>
    </div>

</div>