<div class="container-fluid padding blank-design">
    <div class="row padding">
        <div class="col-lg-4 col-md-3"></div>

        <div class="col-lg-4 col-md-6">
            <form action="/registration" method="POST" id="form-ui">
                <fieldset>
                    <legend><b>Create Account</b></legend>

                    <div class="col-12 social-pic">
                        <img class="social" src="/img/fbLogo.jpg" alt="">
                        <img class="social" src="/img/instaLogo.jpg" alt="">
                        <img class="social" src="/img/tweetLogo.jpg" alt="">
                    </div>

                    <div class="col-12" id="or">
                        <hr>or<hr>
                    </div>

                    <div class="col-12 label-name">
                        <label for="fname">First Name</label>
                        {{#each errorMessages}}<div class="error-style">{{this.first}}</div>{{/each}}
                        <div><input class="field-input" type="text" placeholder="Enter First Name" name="Fname" value={{field.firstName}}></div>
                    </div>

                    <div class="col-12 label-name">
                        <label for="lname">Last Name</label>
                        {{#each errorMessages}}<div class="error-style">{{this.last}}</div>{{/each}}
                        <div><input class="field-input" type="text" placeholder="Enter Last Name" name="Lname" value={{field.lastName}}></div>
                    </div>

                    <div class="col-12 label-name">
                        <label for="email">Email</label>
                        {{#each errorMessages}}<div class="error-style">{{this.email}}</div>{{/each}}
                        <div><input class="field-input" type="email" placeholder="Enter Email..." name="Email" value={{field.email}}></div>
                    </div>

                    <div class="col-12 label-name">
                        <label for="password">Password</label>
                        {{#each errorMessages}}<div class="error-style">{{this.password}}</div>{{/each}}
                        <div><input class="field-input" type="password" placeholder="Enter Password" name="Password" value={{field.password}}></div>
                    </div>

                    <div class="col-12 label-name">
                        <b><input class="field-input btn btn-primary btn-lg" type="submit" value="Sign Up" id="signUp"></b>
                    </div>
                    <br>
                </fieldset>
            </form>
        </div>

        <div class="col-lg-4 col-md-3"></div>
    </div>

</div>